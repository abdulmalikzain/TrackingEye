<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp">
    tools:context="com.example.lenovo.trackingeye.login">

    <android.support.v7.widget.CardView
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="41dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#f98da5"
        android:layout_below="@+id/txt_password"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/TextView3"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Masuk" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Selamat Datang, Silahkan Masuk"
            android:textSize="16dip"
            android:textColor="#fff"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Email Address"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="#11000000"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/txt_password"
            android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_username"
        android:layout_alignStart="@+id/txt_username"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_lock"
        android:hint="Password"
        android:password="true"
        android:textColor="#fff" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Daftar"
        android:textColor="#ff0"
        android:background=""/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Mendaftar Jika Belum Mempunyai Akun"
        android:textColor="#fff"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/or"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btn_login"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
